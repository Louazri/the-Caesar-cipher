class TranspositionCipher(object): 
        
    def __init__(self, key):
           self.key = key
        
    def encrypt_message(self, message , key=None):
        if key is None:
            key = self.key
        alphabet = 'abcdefghijklmnopqrstuvwxyz'
        output = ''
        message = message.lower()
        for char in message :
            if char not in alphabet:
                output += char
            else :
                alpha_index = alphabet.find(char)
                output += alphabet[(alpha_index + key) % 26]
        return output
    
    def decrypt_message(self, message):
        return self.encrypt_message(message , -self.key)
    
        
alawi_habibe_galbi = TranspositionCipher(3)
print(alawi_habibe_galbi.encrypt_message("hello World"))
print(alawi_habibe_galbi.decrypt_message("khoor zruog"))
